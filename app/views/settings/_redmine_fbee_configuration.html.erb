<% string_fields = ProjectCustomField.find :all %>

<fieldset>
<legend>Project Specific</legend>
<p><label>Full path to bash</label>
<%= text_field_tag 'settings[cmd_bash]', @settings['cmd_bash'], :size => 30 %><br />
<em>Full path to the bash-shell executable.</em>
</p>

<p><label>Full path to git</label>
<%= text_field_tag 'settings[cmd_git]', @settings['cmd_git'], :size => 30 %><br />
<em>Full path to the git executable.</em>
</p>

<p><label>Full path to ssh</label>
<%= text_field_tag 'settings[cmd_ssh]', @settings['cmd_ssh'], :size => 30 %><br />
<em>Full path to the ssh/plink executable.</em>
</p>

</fieldset>

<% if false %>
<fieldset>
<legend>System wide</legend>
<p><label>Tab Name</label>
<%= text_field_tag 'settings[system_tab_name]', @settings['system_tab_name'] %><br />
</p>

<p><label>Tab Text</label>
<%= text_area_tag 'settings[system_tab_text]', @settings['system_tab_text'] %><br />
</p>
</fieldset>
<% end %>
